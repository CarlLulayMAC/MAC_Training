<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.listviewrecyclerview.MainActivity">

    <Button
        android:onClick="goToActivities"
    android:text="ListView Activity"
    android:id="@+id/btnListActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <Button
        android:onClick="goToActivities"
        android:text="RecyclerView Activity"
        android:id="@+id/btnRecyclerActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
