<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:gravity="center"
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--Thread-->
    <Button
        android:onClick="onStartThread"
        android:text="Start Thread"
        android:id="@+id/btnThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--Runnable-->
    <Button
        android:onClick="onStartRunnable"
        android:text="Start Runnable"
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--AsyncTask-->
    <Button
        android:onClick="onStartAsyncTask"
        android:text="Start AsyncTask"
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--Event bus-->
    <Button
        android:onClick="onStartEventThread"
        android:text="Start EventThread"
        android:id="@+id/btnEventThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>